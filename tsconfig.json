{
    "compilerOptions": {
        "baseUrl": ".",
        "outFile": "mvvm.js",
        "target": "es5",
        "module": "AMD",
        "allowJs": true,
        "sourceMap": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "paths": {
            "src/*": [
                "src/*"
            ]
        },
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "include": [
        "src",
        "test"
    ]
}