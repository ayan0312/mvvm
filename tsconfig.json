{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES6",
        "module": "ES6",
        "allowJs": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "paths": {
            "src/*": [
                "src/*"
            ]
        },
        "removeComments": true,
        "sourceMap": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "declaration": true,
        "declarationDir": "dist/types/"
    },
    "include": [
        "src",
        "test"
    ]
}